<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Off"
      internalLogFile="c:\temp\internal-nlog.txt"
      throwExceptions="false">

    <!-- enable asp.net core layout renderers -->
    <extensions>
        <add assembly="NLog.Web.AspNetCore"/>
    </extensions>

    <!-- the targets to write to -->
    <targets>
        <target name="console" xsi:type="Console" lineEnding="None" layout="${longdate} ${event-properties:item=EventId_Id} - ${uppercase:${level}} - ${callsite} - ${logger} - ${message} ${replace-newlines:replacement=\r:${exception:format=tostring}} url: ${aspnet-request-url} action: ${aspnet-mvc-action} from ip address: ${aspnet-request-ip:CheckForwardedForHeader=true} User: ${environment-user}" />
    </targets>

    <!-- rules to map from logger name to target -->
    <rules>
        <logger name="*" minlevel="Info" writeTo="console" />

        <!--Skip non-critical Microsoft logs and so log only own logs-->
        <logger name="Microsoft.*" maxlevel="Debug" final="true" /> <!-- BlackHole without writeTo -->
    </rules>
</nlog>